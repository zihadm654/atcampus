// ============================================================================

// Unified Skill model with enhanced categorization and optimization
model Skill {
  id                String  @id @default(cuid()) @map("_id")
  name              String  @unique
  description       String?
  category          String?
  subcategory       String?
  yearsOfExperience Int     @default(0)

  // Skill metadata for better organization and search
  isVerified     Boolean    @default(false)
  tags           String[]   @default([])
  difficulty     SkillLevel // BEGINNER, INTERMEDIATE, EXPERT
  estimatedHours Int? // Estimated learning time

  createdAt DateTime @default(now()) @map(name: "created_at")
  updatedAt DateTime @updatedAt @map(name: "updated_at")

  // Direct relationships for efficient querying
  userSkills        UserSkill[]
  skillEndorsements SkillEndorsement[]
  courseSkills      CourseSkill[]
  jobSkills         JobSkill[]

  @@index([yearsOfExperience])
  @@index([category])
  @@index([subcategory])
  @@index([tags])
  @@index([isVerified])
  @@index([difficulty])
  @@map(name: "skills")
}

// Optimized UserSkill model with direct skill reference and enhanced tracking
model UserSkill {
  id      String @id @default(cuid()) @map("_id")
  userId  String
  user    User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  skillId String
  skill   Skill  @relation(fields: [skillId], references: [id], onDelete: Cascade)

  // Soft delete fields
  deletedAt DateTime?
  isDeleted Boolean   @default(false)

  createdAt DateTime @default(now()) @map(name: "created_at")
  updatedAt DateTime @updatedAt @map(name: "updated_at")

  // Relationships for endorsements and usage tracking
  endorsements SkillEndorsement[]

  @@unique([userId, skillId, isDeleted])
  @@index([userId])
  @@index([skillId])
  @@index([createdAt])
  @@index([isDeleted])
  @@map(name: "user_skills")
}

// Enhanced SkillEndorsement model with additional context
model SkillEndorsement {
  id          String    @id @default(cuid()) @map("_id")
  userSkillId String
  userSkill   UserSkill @relation(fields: [userSkillId], references: [id], onDelete: Cascade)
  endorserId  String
  endorser    User      @relation(fields: [endorserId], references: [id], onDelete: Cascade)
  skillId     String
  skill       Skill     @relation(fields: [skillId], references: [id], onDelete: Cascade)

  // Endorsement details
  comment String?
  rating  Int? // 1-5 rating

  createdAt DateTime @default(now()) @map(name: "created_at")
  updatedAt DateTime @updatedAt @map(name: "updated_at")

  @@unique([userSkillId, endorserId])
  @@index([endorserId])
  @@index([skillId])
  @@index([rating])
  @@index([createdAt])
  @@map(name: "skill_endorsements")
}

// ============================================================================
// SKILL RELATIONSHIP MODELS
// ============================================================================

// NOTE: CourseSkill and JobSkill share common structure:
// - importanceLevel (REQUIRED, PREFERRED, BONUS)
// - weight (0.0 - 1.0 for skill importance)
// Consider abstracting to a base model in future iterations

// Junction table for Course-Skill relationships with metadata
model CourseSkill {
  id       String @id @default(cuid()) @map("_id")
  courseId String
  course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)
  skillId  String
