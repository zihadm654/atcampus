  // Relationship metadata
  importanceLevel String? // REQUIRED, PREFERRED, BONUS
  weight          Float? // 0.0 - 1.0 for skill importance in course

  // Soft delete fields
  deletedAt DateTime?
  isDeleted Boolean   @default(false)

  createdAt DateTime @default(now()) @map(name: "created_at")
  updatedAt DateTime @updatedAt @map(name: "updated_at")

  @@unique([courseId, skillId, isDeleted])
  @@index([skillId])
  @@index([importanceLevel])
  @@index([courseId])
  @@index([weight])
  @@index([isDeleted])
  @@map(name: "course_skills")
}

// Junction table for Job-Skill relationships with metadata
model JobSkill {
  id      String @id @default(cuid()) @map("_id")
  jobId   String
  job     Job    @relation(fields: [jobId], references: [id], onDelete: Cascade)
  skillId String
  skill   Skill  @relation(fields: [skillId], references: [id], onDelete: Cascade)

  // Relationship metadata
  importanceLevel String? // REQUIRED, PREFERRED, BONUS
  weight          Float? // 0.0 - 1.0 for skill importance in job
  yearsRequired   Int? // Minimum years of experience required

  // Soft delete fields
  deletedAt DateTime?
  isDeleted Boolean   @default(false)

  createdAt DateTime @default(now()) @map(name: "created_at")
  updatedAt DateTime @updatedAt @map(name: "updated_at")

  @@unique([jobId, skillId, isDeleted])
  @@index([skillId])
  @@index([importanceLevel])
  @@index([jobId])
  @@index([weight])
  @@index([yearsRequired])
  @@index([isDeleted])
  @@map(name: "job_skills")
}

